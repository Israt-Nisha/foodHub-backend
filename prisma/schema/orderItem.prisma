model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  mealId    String
  quantity  Int
  price    Float 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  meal  Meal  @relation(fields: [mealId], references: [id])
}