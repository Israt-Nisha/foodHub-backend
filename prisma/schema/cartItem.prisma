model CartItem {
  id        String   @id @default(uuid())
  userId    String
  mealId    String
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mealName  String
  mealPrice Float
  mealImage String?

  @@index([userId])
  @@map("cart_items")
}