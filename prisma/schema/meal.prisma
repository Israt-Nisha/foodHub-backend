model Meal {
    id          String  @id @default(uuid())
    name        String
    description String
    price       Float
    imageUrl    String?
    isAvailable Boolean @default(true)

    cuisine CuisineType
    dietary DietaryType

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    userId     String
    providerId String
    categoryId String

    provider ProviderProfile @relation(fields: [providerId], references: [id])
    category Category        @relation(fields: [categoryId], references: [id])

    orderItems OrderItem[]
    reviews    Review[]

    @@index([providerId])
    @@map("meals")
}

enum CuisineType {
    BENGALI
    INDIAN
    CHINESE
    ITALIAN
    THAI
}

enum DietaryType {
    VEG
    NON_VEG
    VEGAN
    HALAL
}
