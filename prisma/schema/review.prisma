model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mealId String
  userId String

  meal Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)

  @@unique([mealId, userId])
  @@map("reviews")
}